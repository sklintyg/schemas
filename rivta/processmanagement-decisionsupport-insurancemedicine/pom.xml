<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>se.inera.intyg.common</groupId>
    <artifactId>common-pom</artifactId>
    <version>1.0.16</version>
  </parent>

  <groupId>se.riv.processmanagement.decisionsupport.insurancemedicinedecisionsupport</groupId>
  <artifactId>processmanagement-decisionsupport-insurancemedicinedecisionsupport-schemas</artifactId>
  <version>0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>RIVTA Schemas (Processmanagement Decisionsupport Insurancemedicine)</name>

  <scm>
    <connection>scm:git:git@github.com:sklintyg/schemas.git</connection>
  </scm>

  <properties>
    <schemas-support.version>1.0.0</schemas-support.version>
    <wsdl.directory>${basedir}/schemas/interactions</wsdl.directory>
  </properties>

  <dependencies>
    <dependency>
      <groupId>se.inera.intyg.schemas</groupId>
      <artifactId>schemas-support</artifactId>
      <version>${schemas-support.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.cxf</groupId>
      <artifactId>cxf-rt-frontend-jaxws</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.cxf</groupId>
      <artifactId>cxf-rt-transports-http</artifactId>
    </dependency>
    <dependency>
      <groupId>joda-time</groupId>
      <artifactId>joda-time</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jvnet.jaxb2_commons</groupId>
      <artifactId>jaxb2-basics-runtime</artifactId>
    </dependency>
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>schemas</directory>
        <includes>
          <include>**/*</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.cxf</groupId>
        <artifactId>cxf-codegen-plugin</artifactId>
        <executions>
          <execution>
            <id>wsdl2java-external-interfaces</id>
            <goals>
              <goal>wsdl2java</goal>
            </goals>
            <phase>generate-sources</phase>
            <configuration>
              <defaultOptions>
                <bindingFiles>
                  <bindingFile>classpath:/bindings/general-binding.xjb</bindingFile>
                </bindingFiles>
                <extraargs>
                  <extraarg>-p</extraarg>
                  <extraarg>urn:riv:itintegration:registry:1=se.riv.itintegration.registry.v1</extraarg>
                  <extraarg>-p</extraarg>
                  <extraarg>urn:riv:processmanagement:decisionsupport:insurancemedicinedecisionsupport:1=se.riv.processmanagement.decisionsupport.insurancemedicinedecisionsupport.v1</extraarg>
                  <extraarg>-p</extraarg>
                  <extraarg>urn:riv:processmanagement:decisionsupport:insurancemedicinedecisionsupport:types:1=se.riv.processmanagement.decisionsupport.insurancemedicinedecisionsupport.types.v1</extraarg>
                </extraargs>
              </defaultOptions>

              <wsdlOptions>
                <wsdlOption>
                  <wsdl>
                    ${wsdl.directory}/GetDiagnosInformationInteraction/GetDiagnosInformationInteraction_1.0_RIVTABP21.wsdl
                  </wsdl>
                  <wsdlLocation>
                    classpath:interactions/GetDiagnosInformationInteraction/GetDiagnosInformationInteraction_1.0_RIVTABP21.wsdl
                  </wsdlLocation>
                  <packagenames>
                    <packagename>
                      urn:riv:processmanagement:decisionsupport:insurancemedicinedecisionsupport:GetDiagnosInformationResponder:1=se.riv.processmanagement.decisionsupport.insurancemedicinedecisionsupport.getdiagnosinformationresponder.v1
                    </packagename>
                    <packagename>
                      urn:riv:processmanagement:decisionsupport:insurancemedicinedecisionsupport:GetDiagnosInformation:1:rivtabp21=se.riv.processmanagement.decisionsupport.insurancemedicinedecisionsupport.getdiagnosinformationresponder.v1
                    </packagename>
                  </packagenames>
                </wsdlOption>

                <wsdlOption>
                  <wsdl>
                    ${wsdl.directory}/GetFmbInteraction/GetFmbInteraction_1.0_RIVTABP21.wsdl
                  </wsdl>
                  <wsdlLocation>
                    classpath:interactions/GetFmbInteraction/GetFmbInteraction_1.0_RIVTABP21.wsdl
                  </wsdlLocation>
                  <packagenames>
                    <packagename>
                      urn:riv:processmanagement:decisionsupport:insurancemedicinedecisionsupport:GetFmbResponder:1=se.riv.processmanagement.decisionsupport.insurancemedicinedecisionsupport.getfmbresponder.v1
                    </packagename>
                    <packagename>
                      urn:riv:processmanagement:decisionsupport:insurancemedicinedecisionsupport:GetFmb:1:rivtabp21=se.riv.processmanagement.decisionsupport.insurancemedicinedecisionsupport.getfmbresponder.v1
                    </packagename>
                  </packagenames>
                </wsdlOption>

                <wsdlOption>
                  <wsdl>
                    ${wsdl.directory}/GetVersionsInteraction/GetVersionsInteraction_1.0_RIVTABP21.wsdl
                  </wsdl>
                  <wsdlLocation>
                    classpath:interactions/GetVersionsInteraction/GetVersionsInteraction_1.0_RIVTABP21.wsdl
                  </wsdlLocation>
                  <packagenames>
                    <packagename>
                      urn:riv:processmanagement:decisionsupport:insurancemedicinedecisionsupport:GetVersionsResponder:1=se.riv.processmanagement.decisionsupport.insurancemedicinedecisionsupport.getversionsresponder.v1
                    </packagename>
                    <packagename>
                      urn:riv:processmanagement:decisionsupport:insurancemedicinedecisionsupport:GetVersions:1:rivtabp21=se.riv.processmanagement.decisionsupport.insurancemedicinedecisionsupport.getversionsresponder.v1
                    </packagename>
                  </packagenames>
                </wsdlOption>

              </wsdlOptions>

            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <repositories>
    <repository>
      <id>inera-release</id>
      <url>https://build-inera.nordicmedtest.se/nexus/content/repositories/releases/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>inera-snapshot</id>
      <url>https://build-inera.nordicmedtest.se/nexus/content/repositories/snapshots/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>thirdparty</id>
      <url>https://build-inera.nordicmedtest.se/nexus/content/repositories/thirdparty/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>

</project>
