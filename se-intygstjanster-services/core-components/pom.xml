<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>se.inera.intyg.schemas.intygstjanster.ts.services.v1</groupId>
    <artifactId>se-intygstjanster-ts-services-parent</artifactId>
    <version>0-SNAPSHOT</version>
  </parent>

  <artifactId>se-intygstjanster-ts-services-core</artifactId>

  <name>Transportstyrelsen Core-components</name>

  <properties>
    <schema.dir>${basedir}/src/main/resources/intygstjanster-services/core-components</schema.dir>
    <bindings.dir>${basedir}/src/main/resources/intygstjanster-services/bindings</bindings.dir>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.apache.cxf</groupId>
      <artifactId>cxf-rt-frontend-jaxws</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.cxf</groupId>
      <artifactId>cxf-rt-transports-http</artifactId>
    </dependency>
    <dependency>
      <groupId>joda-time</groupId>
      <artifactId>joda-time</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jvnet.jaxb2_commons</groupId>
      <artifactId>jaxb2-basics-runtime</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.jvnet.jaxb2.maven2</groupId>
        <artifactId>maven-jaxb2-plugin</artifactId>
        <version>0.11.0</version>
        <executions>
          <execution>
            <id>generate_from_xsds</id>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <schemaDirectory>${schema.dir}</schemaDirectory>
          <schemaIncludes>
            <schemaInclude>ws-addressing-1.0.xsd</schemaInclude>
            <schemaInclude>itintegration_monitoring_1.0.xsd</schemaInclude>
            <schemaInclude>itintegration_registry_1.0.xsd</schemaInclude>
            <schemaInclude>se_intygstjanster_services_1.0.xsd</schemaInclude>
            <schemaInclude>se_intygstjanster_services_types_1.0.xsd</schemaInclude>
          </schemaIncludes>
         <bindingDirectory>${bindings.dir}</bindingDirectory>
         <bindings>
           <binding>
             <dependencyResource>
               <groupId>se.inera.intyg.schemas</groupId>
               <artifactId>schemas-common</artifactId>
               <resource>bindings/general-binding.xjb</resource>
             </dependencyResource>
           </binding>
         </bindings>
          <generateDirectory>${project.build.directory}/generated</generateDirectory>
          <verbose>true</verbose>
          <args>
            <arg>-XhashCode</arg>
            <arg>-Xequals</arg>
            <arg>-XtoString</arg>
            <arg>-Xinheritance</arg>
          </args>
        </configuration>
        <dependencies>
          <dependency>
            <groupId>org.jvnet.jaxb2_commons</groupId>
            <artifactId>jaxb2-basics</artifactId>
            <version>${jaxb.commons.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>
