<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>se.inera.intyg.schemas.intygstjanster.ts.services.v1</groupId>
    <artifactId>se-intygstjanster-ts-services-parent</artifactId>
    <version>0-SNAPSHOT</version>
  </parent>

  <artifactId>se-intygstjanster-ts-services-interactions</artifactId>

  <name>Transportstyrelsen Interactions</name>

  <properties>
    <wsdl.directory>${basedir}/src/main/resources/interactions</wsdl.directory>
  </properties>

  <dependencies>
    <dependency>
      <groupId>se.inera.intyg.schemas.intygstjanster.ts.services.v1</groupId>
      <artifactId>se-intygstjanster-ts-services-core</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.cxf</groupId>
      <artifactId>cxf-rt-frontend-jaxws</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.cxf</groupId>
      <artifactId>cxf-rt-transports-http</artifactId>
    </dependency>
    <dependency>
      <groupId>joda-time</groupId>
      <artifactId>joda-time</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jvnet.jaxb2_commons</groupId>
      <artifactId>jaxb2-basics-runtime</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.cxf</groupId>
        <artifactId>cxf-codegen-plugin</artifactId>
        <executions>
          <execution>
            <id>wsdl2java-external-interfaces</id>
            <goals>
              <goal>wsdl2java</goal>
            </goals>
            <phase>generate-sources</phase>
            <configuration>
              <defaultOptions>
                <bindingFiles>
                  <bindingFile>classpath:/bindings/general-binding.xjb</bindingFile>
                </bindingFiles>
                <catalog>classpath:/intygstjanster-services/core-components/catalog.xml</catalog>
                <extraargs>
                  <!-- Enable JAXB extensions -->
                  <extraarg>-xjc-XhashCode</extraarg>
                  <extraarg>-xjc-Xequals</extraarg>
                  <extraarg>-xjc-XtoString</extraarg>
                  <extraarg>-xjc-Xinheritance</extraarg>
                  <!-- Exclude generation of code from core components -->
                  <extraarg>-nexclude</extraarg>
                  <extraarg>http://www.w3.org/2005/08/addressing=org.w3.wsaddressing10</extraarg>
                  <extraarg>-nexclude</extraarg>
                  <extraarg>urn:riv:itintegration:registry:1=se.riv.itintegration.registry.v1</extraarg>
                  <extraarg>-nexclude</extraarg>
                  <extraarg>urn:local:se:intygstjanster:services:1=se.intygstjanster.ts.services.v1</extraarg>
                  <extraarg>-nexclude</extraarg>
                  <extraarg>urn:local:se:intygstjanster:services:types:1=se.intygstjanster.ts.services.types.v1</extraarg>
                </extraargs>
              </defaultOptions>

              <wsdlOptions>
                <wsdlOption>
                  <wsdl>
                    ${wsdl.directory}/GetTSBasInteraction/GetTSBasInteraction_1.0_RIVTABP21.wsdl
                  </wsdl>
                  <wsdlLocation>
                    classpath:interactions/GetTSBasInteraction/GetTSBasInteraction_1.0_RIVTABP21.wsdl
                  </wsdlLocation>
                  <packagenames>
                   <packagename>
                     urn:local:se:intygstjanster:services:GetTSBasResponder:1=se.intygstjanster.ts.services.GetTSBasResponder.v1
                   </packagename>
                   <packagename>
                     urn:local:se:intygstjanster:services:GetTSBas:1:rivtabp21=se.intygstjanster.ts.services.GetTSBasResponder.v1
                   </packagename>
                  </packagenames>
                </wsdlOption>

                <wsdlOption>
                  <wsdl>
                    ${wsdl.directory}/RegisterTSBasInteraction/RegisterTSBasInteraction_1.0_RIVTABP21.wsdl
                  </wsdl>
                  <wsdlLocation>
                    classpath:interactions/RegisterTSBasInteraction/RegisterTSBasInteraction_1.0_RIVTABP21.wsdl
                  </wsdlLocation>
                  <packagenames>
                   <packagename>
                     urn:local:se:intygstjanster:services:RegisterTSBasResponder:1=se.intygstjanster.ts.services.RegisterTSBasResponder.v1
                   </packagename>
                   <packagename>
                     urn:local:se:intygstjanster:services:RegisterTSBas:1:rivtabp21=se.intygstjanster.ts.services.RegisterTSBasResponder.v1
                   </packagename>
                  </packagenames>
                </wsdlOption>

                <wsdlOption>
                  <wsdl>
                    ${wsdl.directory}/GetTSDiabetesInteraction/GetTSDiabetesInteraction_1.0_RIVTABP21.wsdl
                  </wsdl>
                  <wsdlLocation>
                    classpath:interactions/GetTSDiabetesInteraction/GetTSDiabetesInteraction_1.0_RIVTABP21.wsdl
                  </wsdlLocation>
                  <packagenames>
                    <packagename>
                      urn:local:se:intygstjanster:services:GetTSDiabetesResponder:1=se.intygstjanster.ts.services.GetTSDiabetesResponder.v1
                    </packagename>
                    <packagename>
                      urn:local:se:intygstjanster:services:GetTSDiabetes:1:rivtabp21=se.intygstjanster.ts.services.GetTSDiabetesResponder.v1
                    </packagename>
                  </packagenames>
                </wsdlOption>

                <wsdlOption>
                  <wsdl>
                    ${wsdl.directory}/RegisterTSDiabetesInteraction/RegisterTSDiabetesInteraction_1.0_RIVTABP21.wsdl
                  </wsdl>
                  <wsdlLocation>
                    classpath:interactions/RegisterTSDiabetesInteraction/RegisterTSDiabetesInteraction_1.0_RIVTABP21.wsdl
                  </wsdlLocation>
                  <packagenames> 
                   <packagename>
                     urn:local:se:intygstjanster:services:RegisterTSDiabetesResponder:1=se.intygstjanster.ts.services.RegisterTSDiabetesResponder.v1
                   </packagename>
                   <packagename>
                     urn:local:se:intygstjanster:services:RegisterTSDiabetes:1:rivtabp21=se.intygstjanster.ts.services.RegisterTSDiabetesResponder.v1
                   </packagename>
                  </packagenames>
                </wsdlOption>
              </wsdlOptions>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>org.jvnet.jaxb2_commons</groupId>
            <artifactId>jaxb2-basics</artifactId>
            <version>${jaxb.commons.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
</project>
